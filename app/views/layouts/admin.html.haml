!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}
      %meta{:content => "IE=Edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
        %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
          %title= content_for?(:title) ? yield(:title) : "Miami Bitcoin Hackathon"

          = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
          / For third-generation iPad with high-resolution Retina display:
          / Size should be 144 x 144 pixels
          = favicon_link_tag 'apple-touch-icon-144x144-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '144x144'
          / For iPhone with high-resolution Retina display:
          / Size should be 114 x 114 pixels
          = favicon_link_tag 'apple-touch-icon-114x114-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '114x114'
          / For first- and second-generation iPad:
          / Size should be 72 x 72 pixels
          = favicon_link_tag 'apple-touch-icon-72x72-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '72x72'
          / For non-Retina iPhone, iPod Touch, and Android 2.1+ devices:
          / Size should be 57 x 57 pixels
          = favicon_link_tag 'apple-touch-icon-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png'
          / For all other devices
          / Size should be 32 x 32 pixels
          = favicon_link_tag 'favicon.ico', :rel => 'shortcut icon'
          = javascript_include_tag 'application', 'data-turbolinks-track' => true
          %script{:src => "https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"}
          %script{:src => "https://oss.maxcdn.com/respond/1.4.2/respond.min.js"}
          = csrf_meta_tags
  %body.clean{"data-offset" => "0", "data-spy" => "scroll", "data-target" => "#theMenu"}
    - if user_signed_in?
      %header.site-header
        .container
          .navbar.navbar-inverse{:role => "navigation"}
            %div
              %a.navbar-brand.hidden-xs{:href => "/"}
                %img{:src => ""}/
              %button.navbar-toggle{:type => "button"}
                %span.icon-bar
                %span.icon-bar
                %span.icon-bar
            .navbar-right
              %a.navbar-brand.visible-xs{:href => "/"}
                %img{:src => "//cdn.changetip.com/img/logos/changetip_logo.png"}/
              .navbar-collapse.collapse{:style => "height: 0px;"}
                %ul.nav.navbar-nav
                  %li
                    = link_to admin_hackers_path do
                      %span Hackers
                  %li
                    = link_to admin_observer_path do
                      %span Observers / After Party
                  %li
                    = link_to destroy_user_session_path, :class => "logout-link", :method => :delete do
                      %span Log Out
    = yield

    :javascript
